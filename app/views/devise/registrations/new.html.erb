<h2>Registro</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <form>
    <div class="row mb-3">
      <%= f.label :name, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
    </div>

    <div class="row mb-3">
      <%= f.label :email, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
    </div>

    <div class="row mb-3">
      <%= f.label :password, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control"  %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> caracteres m√≠nimo)</em>
        <% end %>
      </div>  
    </div>

    <div class="row mb-3">
      <%= f.label :password_confirmation, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>  
    </div>
    <%= f.submit "Registrarse", class: "btn btn-primary" %>
  </form>
<% end %>

<%= render "devise/shared/links" %>
